# Swarm Intelligence Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Required: At least one AI model API key
ANTHROPIC_API_KEY=sk-ant-api03-YOUR-KEY-HERE
OPENAI_API_KEY=sk-YOUR-KEY-HERE
PERPLEXITY_API_KEY=pplx-YOUR-KEY-HERE

# Optional: Additional AI model providers
GOOGLE_API_KEY=YOUR-KEY-HERE
MISTRAL_API_KEY=YOUR-KEY-HERE
XAI_API_KEY=YOUR-KEY-HERE
OPENROUTER_API_KEY=YOUR-KEY-HERE

# AI Platform Configuration
AI_PLATFORM_URL=http://localhost:8000
TIDY_ASSISTANT_URL=http://localhost:8001
DEMO_TOKEN=demo-token

# Swarm Configuration
ENABLE_SWARM_INTELLIGENCE=true
ENABLE_DISTRIBUTED_MEMORY=true
ENABLE_COLLABORATION=true
MAX_AGENTS=10
WORKSPACE_ROOT=~/

# Swarm File Paths (will be auto-configured)
SWARM_MEMORY_DB=swarm_memory.db
SWARM_CONFIG=swarm_config.json
PROMPTS_CONFIG=prompts_config.json