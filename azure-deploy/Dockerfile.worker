# Worker Agent Dockerfile
# Template for all worker agents (architect, coder, tester, etc.)

FROM python:3.12-slim

# Build argument for agent type
ARG AGENT_TYPE=coder
ARG AGENT_PRIORITY=7
ARG MAX_INSTANCES=3

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    git \
    curl \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

# Copy swarm intelligence files
COPY .claude/swarm-intelligence/ai_platform_mcp_swarm.py /app/
COPY .claude/swarm-intelligence/ai_platform_mcp_autonomous.py /app/
COPY .claude/swarm-intelligence/ai_platform_mcp_enhanced.py /app/
COPY .claude/swarm-intelligence/swarm_config.json /app/
COPY .claude/swarm-intelligence/prompts_config.json /app/

# Install Python dependencies
RUN pip install --no-cache-dir \
    aiohttp==3.9.1 \
    anthropic==0.64.0 \
    openai \
    azure-cosmos \
    azure-servicebus \
    azure-keyvault-secrets \
    azure-identity \
    azure-storage-blob \
    mcp==1.13.1 \
    asyncio \
    sqlite3-api \
    black \
    pylint \
    pytest

# Install Node dependencies for coder agents
RUN if [ "$AGENT_TYPE" = "coder" ]; then \
        npm install -g typescript eslint prettier; \
    fi

# Environment variables
ENV AGENT_TYPE=${AGENT_TYPE} \
    AGENT_PRIORITY=${AGENT_PRIORITY} \
    MAX_INSTANCES=${MAX_INSTANCES} \
    AZURE_COSMOS_ENDPOINT="" \
    AZURE_COSMOS_KEY="" \
    AZURE_SERVICE_BUS_CONNECTION_STRING="" \
    AZURE_KEY_VAULT_URL="" \
    AZURE_STORAGE_CONNECTION_STRING=""

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import sys; import os; print(f'Agent {os.environ.get(\"AGENT_TYPE\")} healthy'); sys.exit(0)"

# Run the worker agent
CMD ["python", "-u", "ai_platform_mcp_swarm.py", "--agent-type", "${AGENT_TYPE}"]